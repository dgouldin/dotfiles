# Configs
config defaultToCurrentScreen true
config checkDefaultsOnLoad true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Monitor Aliases
alias mon_laptop 1366x768
alias mon_cinema 2560x1440

# Width Aliases
alias buffer 10
alias width_adium 225
alias width_echofon 275

# Move Aliases
alias move_full_screen_except_adium_echofon move screenOriginX+${width_adium}+${buffer};screenOriginY screenSizeX-${width_adium}-${width_echofon}-2*${buffer};screenSizeY
alias move_full_screen move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias move_adium move screenOriginX;screenOriginY ${width_adium};screenSizeY
alias move_echofon move screenSizeX-${width_echofon};screenOriginY ${width_echofon};screenSizeY

# Layout definitions
layout laptop_only 'iTerm' ${move_full_screen} ${mon_laptop}
layout laptop_only 'Google Chrome':REPEAT ${move_full_screen} ${mon_laptop}
layout laptop_only 'Textual' ${move_full_screen} ${mon_laptop}
layout laptop_only 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${move_adium} ${mon_laptop}
layout laptop_only 'Echofon' ${move_echofon} ${mon_laptop}

layout cinema_only 'iTerm' ${move_full_screen} ${mon_cinema}
layout cinema_only 'Google Chrome':REPEAT ${move_full_screen_except_adium_echofon} ${mon_cinema}
layout cinema_only 'Textual' ${move_full_screen_except_adium_echofon} ${mon_cinema}
layout cinema_only 'Adium':IGNORE_FAIL,TITLE_ORDER=Contacts ${move_adium} ${mon_cinema}
layout cinema_only 'Echofon' ${move_echofon} ${mon_cinema}

# Default Layouts
default laptop_only resolutions:${mon_laptop}
default cinema_only resolutions:${mon_cinema}

# Resize Bindings
bind right:alt       resize +10% +0
bind left:alt        resize -10% +0
bind up:alt          resize +0   -10%
bind down:alt        resize +0   +10%
bind right:ctrl;alt  resize -10% +0 bottom-right
bind left:ctrl;alt   resize +10% +0 bottom-right
bind up:ctrl;alt     resize +0   +10% bottom-right
bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize
bind right:ctrl;alt;cmd throw right resize
bind left:ctrl;alt;cmd  throw left  resize
bind up:ctrl;alt;cmd    throw up    resize
bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind right:cmd    focus right
bind left:cmd     focus left
bind up:cmd       focus up
bind down:cmd     focus down
bind up:cmd;alt   focus behind
bind down:cmd;alt focus behind

# Window Hints
bind esc:cmd hint
